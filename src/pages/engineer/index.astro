---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { ENGINEER } from "@consts";
import {
  getDocumentsByCollection,
  sortDocumentsByDate,
} from "@lib/documents";

const projects = sortDocumentsByDate(
  getDocumentsByCollection("engineer/projects"),
);
const projectPreview = projects.slice(0, 5);
---

<Layout title={ENGINEER.TITLE} description={ENGINEER.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-10">
        <section class="space-y-3">
          <h1 class="text-3xl font-semibold text-black dark:text-white">
            Engineer
          </h1>
          <p class="max-w-2xl text-black/70 dark:text-white/70">
            Software projects, experiments, and technical writing.
          </p>
        </section>

        <section class="space-y-4">
          <div class="flex flex-wrap items-center justify-between gap-y-2">
            <h2 class="text-lg font-semibold text-black dark:text-white">
              Projects
            </h2>
            <Link href="/engineer/projects">View all</Link>
          </div>

          <p class="max-w-2xl text-lg text-black/80 dark:text-white/80">
            View my personal OS app and login as a guest here at{" "}
            <Link href="https://GetAnchored.app/login" external>
              GetAnchored.app/login
            </Link>
            .
            <br />
            Explore the repo on GitHub <Link href="https://github.com/dwaynemcyrus/anchored" external>
              here
            </Link>.
          </p>

          <hr>

          <p> A fun pizza recipe website page. The expirement was to produce everything from design to code to copy and images only using AI in a under 6 hours. I will continue to expand on this project with the history of pineapple's being a topping on pizza =).<br /> <b>Check it out here:</b> <Link href="https://no-pineapple-pizza.netlify.app/" external>
            no-pineapple-pizza.netlify.app
          </Link>.</p>

          <!-- {projects.length === 0 ? (
            <p class="text-sm text-black/60 dark:text-white/60">
              More projects coming soon.
            </p>
          ) : (
            <ul class="not-prose flex flex-col gap-4">
              {projectPreview.map((doc) => (
                <li>
                  <ArrowCard entry={doc} />
                </li>
              ))}
            </ul>
          )} -->
        </section>
      </div>
    </aside>
  </Container>
</Layout>
