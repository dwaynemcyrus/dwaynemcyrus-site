---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { NOW } from "@consts";
---

<Layout title={NOW.TITLE} description={NOW.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-4">
        <h1 class="text-3xl font-semibold text-black dark:text-white">
          Now
        </h1>
        <p class="max-w-2xl text-black/70 dark:text-white/70">
          A snapshot of what I'm focused on right now.
        </p>
        <div class="rounded-lg border border-dashed border-black/15 p-6 text-sm text-black/60 dark:border-white/20 dark:text-white/60">
          Update this page with the current season, projects, and priorities.
        </div>
      </div>
    </aside>
  </Container>
</Layout>
