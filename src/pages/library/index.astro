---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import CollectionGroup from "@components/CollectionGroup.astro";
import { LIBRARY } from "@consts";
import { getDocumentsGroupedByContentType } from "@lib/documents";
import { getContentTypesForLanding } from "@config/routes";

const contentTypes = getContentTypesForLanding("/library");
const grouped = getDocumentsGroupedByContentType(contentTypes);

const descriptions: Record<string, string> = {
  principles: "Core ideas that guide my work and life.",
  fragments: "Shorter thoughts and observations.",
  essays: "Longer explorations of ideas.",
  directives: "Actionable guidance and instructions.",
  everyday: "Notes from daily life.",
  references: "Curated resources and links.",
  books: "Notes and reflections on books.",
  linked: "Connected thoughts and ideas.",
};
---

<Layout title={LIBRARY.TITLE} description={LIBRARY.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-12">
        <section class="space-y-3">
          <h1 class="text-3xl font-semibold text-black dark:text-white">
            Library
          </h1>
          <p class="max-w-2xl text-black/70 dark:text-white/70">
            {LIBRARY.DESCRIPTION}
          </p>
        </section>

        {Object.keys(grouped).length === 0 ? (
          <p class="text-sm text-black/60 dark:text-white/60">
            No content yet.
          </p>
        ) : (
          Object.entries(grouped).map(([contentType, docs]) => (
            <CollectionGroup
              contentType={contentType}
              documents={docs}
              basePath="/library"
              description={descriptions[contentType]}
            />
          ))
        )}
      </div>
    </aside>
  </Container>
</Layout>
