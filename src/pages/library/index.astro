---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { LIBRARY } from "@consts";
import {
  getDocumentsByCollection,
  sortDocumentsByDate,
} from "@lib/documents";

const principles = sortDocumentsByDate(
  getDocumentsByCollection("library/principles"),
);
const fragments = sortDocumentsByDate(
  getDocumentsByCollection("library/fragments"),
);

const principlePreview = principles.slice(0, 5);
const fragmentPreview = fragments.slice(0, 5);
---

<Layout title={LIBRARY.TITLE} description={LIBRARY.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-12">
        <section class="space-y-3">
          <h1 class="text-3xl font-semibold text-black dark:text-white">
            Library
          </h1>
          <p class="max-w-2xl text-black/70 dark:text-white/70">
            Essays, principles, and collected fragments.
          </p>
        </section>

        <section class="space-y-4">
          <div class="flex flex-wrap items-center justify-between gap-y-2">
            <div>
              <h2 class="text-lg font-semibold text-black dark:text-white">
                Principles
              </h2>
              <p class="text-sm text-black/60 dark:text-white/60">
                Core ideas that guide my work and life.
              </p>
            </div>
            <Link href="/library/principles">View all</Link>
          </div>
          {principles.length === 0 ? (
            <p class="text-sm text-black/60 dark:text-white/60">
              No principles yet.
            </p>
          ) : (
            <ul class="not-prose flex flex-col gap-4">
              {principlePreview.map((doc) => (
                <li>
                  <ArrowCard entry={doc} />
                </li>
              ))}
            </ul>
          )}
        </section>

        <section class="space-y-4">
          <div class="flex flex-wrap items-center justify-between gap-y-2">
            <div>
              <h2 class="text-lg font-semibold text-black dark:text-white">
                Fragments
              </h2>
              <p class="text-sm text-black/60 dark:text-white/60">
                Shorter thoughts and observations.
              </p>
            </div>
            <Link href="/library/fragments">View all</Link>
          </div>
          {fragments.length === 0 ? (
            <p class="text-sm text-black/60 dark:text-white/60">
              No fragments yet.
            </p>
          ) : (
            <ul class="not-prose flex flex-col gap-4">
              {fragmentPreview.map((doc) => (
                <li>
                  <ArrowCard entry={doc} />
                </li>
              ))}
            </ul>
          )}
        </section>
      </div>
    </aside>
  </Container>
</Layout>
