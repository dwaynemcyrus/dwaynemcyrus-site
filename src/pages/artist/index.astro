---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import CollectionGroup from "@components/CollectionGroup.astro";
import { ARTIST } from "@consts";
import { getDocumentsGroupedByContentType } from "@lib/documents";
import { getContentTypesForLanding } from "@config/routes";

const contentTypes = getContentTypesForLanding("/artist");
const grouped = getDocumentsGroupedByContentType(contentTypes);

const descriptions: Record<string, string> = {
  poetry: "Verse and lyrical writing.",
  artwork: "Visual work and experiments.",
};
---

<Layout title={ARTIST.TITLE} description={ARTIST.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-12">
        <section class="space-y-3">
          <h1 class="text-3xl font-semibold text-black dark:text-white">
            Artist
          </h1>
          <p class="max-w-2xl text-black/70 dark:text-white/70">
            {ARTIST.DESCRIPTION}
          </p>
        </section>

        {Object.keys(grouped).length === 0 ? (
          <p class="text-sm text-black/60 dark:text-white/60">
            No content yet.
          </p>
        ) : (
          Object.entries(grouped).map(([contentType, docs]) => (
            <CollectionGroup
              contentType={contentType}
              documents={docs}
              basePath="/artist"
              description={descriptions[contentType]}
            />
          ))
        )}
      </div>
    </aside>
  </Container>
</Layout>
